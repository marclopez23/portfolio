---
// src/layouts/PageLayout.astro
import Layout from '../layouts/Layout.astro'
import Menu from '../components/Menu.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  currentPage?: string;
  description?: string;
  keywords?: string;
  lang?: string;
}

const { 
  title, 
  currentPage = '',
  description,
  keywords,
  lang = 'es'
} = Astro.props;

// Detectar idioma
const isEnglish = lang === 'en' || Astro.url.pathname.startsWith('/en/');

// Items del menú según idioma
const menuItems = isEnglish ? [
  { 
    text: 'Home', 
    href: '/en/', 
    active: currentPage === '/' || currentPage === 'home'
  },
  { 
    text: 'About', 
    href: '/en/about', 
    active: currentPage === 'about' || currentPage === 'sobre-mi'
  },
  { 
    text: 'Resume', 
    href: '/en/resume', 
    active: currentPage === 'resume'
  },
  { 
  text: 'Projects', 
  href: '/en/projects', 
  active: currentPage === 'projects'
}
] : [
  { 
    text: 'Inicio', 
    href: '/', 
    active: currentPage === '/' || currentPage === 'home' || currentPage === 'inicio'
  },
  { 
    text: 'Sobre mí', 
    href: '/sobre-mi', 
    active: currentPage === '/sobre-mi' || currentPage === 'sobre-mi'
  },
  { 
    text: 'CV', 
    href: '/cv', 
    active: currentPage === '/cv' || currentPage === 'cv'
  },
  { 
    text: 'Proyectos', 
    href: '/proyectos', 
    active: currentPage === '/projects' || currentPage === 'projects'
  }
];



// Logo href según idioma
const logoHref = isEnglish ? '/en/' : '/';

// También puede detectar automáticamente desde la URL
const pathname = Astro.url?.pathname || '';
if (!currentPage && pathname) {
  menuItems.forEach(item => {
    if (pathname === '/' && item.href === '/') {
      item.active = true;
    } else if (pathname !== '/' && (pathname === item.href || pathname.endsWith(item.href))) {
      item.active = true;
    }
  });
}
---

<Layout title={title} description={description} keywords={keywords}>
  
  <div class="page">
    <!-- Header fijo con menú -->
    <header class="page__header">
      <Menu 
        menuItems={menuItems} 
        logoHref={logoHref}
logoAlt={isEnglish ? "Marc López - UX/UI Designer" : "Marc López - Diseñador UX/UI"}
        class="menu--fixed"
      />
    </header>

    <!-- Contenido principal -->
    <main class="page__main" id="main-content">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="page__footer">
      <Footer name="Marc López" />
    </footer>
  </div>

  <style>
    /* Estilos del layout con menú */
    .page {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      background-color: var(--color-main-bg);
    }

    .page__header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      background-color: var(--color-main-bg);
    }

    .page__main {
      flex: 1;
      padding-top: 90px; /* Altura del header fijo */
    }

    .page__footer {
      margin-top: auto;
    }

    /* Menu fijo mejorado */
    .menu--fixed {
      border-bottom: 1px solid var(--color-divider);
    }

    /* Responsive adjustments */
    @media (max-width: 767px) {
      .page__main {
        padding-top: 88px; /* Menos padding en móvil */
      }
    }

    /* Mejoras para high contrast */
    @media (prefers-contrast: high) {
      .page__header {
        border-bottom: 2px solid var(--color-text-primary);
      }
    }
  </style>
</Layout>